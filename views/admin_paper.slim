script src=("/qiniu/plupload.full.min.js") type="text/javascript"
script src=("/qiniu/qiniu.min.js") type="text/javascript"
script src=("/qiniu/main.js") type="text/javascript"

form action="/admin/paper" method="post"
  input type="hidden" name="_method" value="#{@paper.empty? ? 'post' : 'put'}"

  .form-group
    input.form-control name="id" value=@paper['id'] placeholder="ID" readonly="readonly"

  .form-group
    input.form-control name="date" value=@paper['date'] placeholder="Date"

  .form-group
    textarea.form-control name="content" placeholder="Content"
      =@paper['content']

  .form-group
    input#qiniu_field.form-control  name="pdf_url" value=@paper['pdf_url'] placeholder="Pdf Url" readonly="readonly"

  .form-group
    button#upload.btn.btn-default.btn-default upload a pdf

  .form-group
    button.btn.btn-success.btn-lg type="submit" Submit
    '
    a.btn.btn-warning.btn-lg href="/admin/papers" back
