.home-banner
  .home-content
    == @home["intro"]

css:
  .home-banner {
    width: 100wh;
    height: 100vh;
    background: url("#{@home["image_url"]}") no-repeat center center;
    background-size: cover;
    text-align: center;
  }

  .home-content {
    position: absolute;
    font-size: 30px;
    color: #fff;
    top: 30%;
    bottom: 50%;
    left: 50%;
    right: 50%;
    width: 80%;
    transform: translate(-50%);
  }
