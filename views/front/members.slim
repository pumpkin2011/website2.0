.members.clearfix
  - @members.each do |member|
    .card
      .profile
        img.profile alt="" src=member['image_url']+'-profile'
        h2.name = member['name']
      .intro
        == member['intro']

scss:
  .members {
    min-width: 350px;
    max-width: 1050px;
    margin: 70px auto 0 auto;
  }
  .card {
    width: 300px;
    height: 400px;
    float: left;
    margin: 20px 25px;
    box-shadow: 0 1px 1px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
    img.profile {
      width: 300px;
      height: 300px;
    }
    h2.name {
      text-align: center;
    }
    .intro {
      position: relative;
      top: -372px;
      width: 100%;
      height: 0;
      overflow: hidden;
      background-color: #111;
      opacity: 0.7;
      transition: all 500ms;
      > p {
        color: #fff;
        padding: 10px 10px;
      }
    }
    &:hover {
      .intro {
        height: 400px;
      }
    }
  }
